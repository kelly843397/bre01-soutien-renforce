{% extends "base-admin.html.twig" %}

{% block body %}
<main class=container>
	<h1 class="mb-5">Titre de la page</h1>

        <a href="" class="btn btn-primary">Ajouter <span class="bi bi-plus-circle-fill"></span></a>
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Start_year
                    </th>
                   <th>
                        End_year
                    </th>
                    <th>
                        Picture_url
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for plane in planes %}
                <tr>
                    <td>
                        {{ plane.id }} 
                    </td>
                    <td>
                        {{ plane.name }}
                    </td>
                   <td>
                        {{ plane.startYear }}
                    </td>
                    <td>
                        {{ plane.endYear }}
                    </td>
                    <td>
                        {{ plane.pictureUrl }}
                    </td>
                    <td>
                        <a href="" class="btn btn-primary"><span class="bi bi-eye-fill"></span></a>
                        <a href="" class="btn btn-success"><span class="bi bi-pencil-fill"></span></a>
                        <a href="" class="btn btn-danger"><span class="bi bi-trash3-fill"></span></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
               <th>
                    Start_year
                </th>
                <th>
                    End_year
                </th>
                <th>
                    Picture_url
                </th>
                <th>
                    Actions
                </th>
            </tr>
            </tfoot>
        </table>
</main>
{% endblock %}